{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "jsx": "react",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@types/hubs"
    ],
    "allowJs": true,
    "types": [
      "networked-aframe"
    ]
  },
  "include": ["./src/**/*.ts", "./src/components.js"],
  "exclude": ["node_modules", "dist"]
}
